{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2022"],
    "target": "ES2022",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": true
  }
}
