{
  "name": "@diut/nest-core",
  "description": "nest-core",
  "repository": "https://github.com/wermarter/diut",
  "author": "Ha Minh Chien <wermarter@gmail.com>",
  "private": true,
  "license": "MIT",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "postinstall": "pnpm --filter '@diut/nest-core...' run build",
    "build": "cpy 'src/protobuf/*.proto' 'dist/protobuf/' && tsc",
    "lint": "tsc --noEmit",
    "dev:proto:command": "concurrently 'cpy \"src/protobuf/*.proto\" \"dist/protobuf/\"' 'pnpm run proto'",
    "dev:proto": "nodemon -w src/protobuf/ -e proto -x 'pnpm run dev:proto:command'",
    "dev": "concurrently 'pnpm run dev:proto' \"tsc --watch --preserveWatchOutput\"",
    "proto": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto -I=src/protobuf --ts_proto_out=src/protobuf/generated src/protobuf/*.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb --experimental_allow_proto3_optional"
  },
  "peerDependencies": {
    "@nestjs/core": "^10.2.8",
    "@nestjs/config": "^3.1.1"
  },
  "dependencies": {
    "@diut/common": "workspace:*",
    "@grpc/grpc-js": "^1.9.12",
    "@grpc/proto-loader": "^0.7.10",
    "@nestjs/common": "^10.2.8",
    "@nestjs/microservices": "^10.2.8",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/swagger": "^7.1.16",
    "@opentelemetry/api": "1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/context-async-hooks": "^1.18.1",
    "@opentelemetry/core": "^1.18.1",
    "@opentelemetry/exporter-prometheus": "^0.45.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.1",
    "@opentelemetry/host-metrics": "^0.33.2",
    "@opentelemetry/instrumentation": "^0.45.1",
    "@opentelemetry/instrumentation-http": "^0.45.1",
    "@opentelemetry/instrumentation-mongoose": "^0.33.4",
    "@opentelemetry/resources": "1.18.1",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/sdk-trace-base": "^1.18.1",
    "@opentelemetry/semantic-conventions": "^1.18.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "lodash": "^4.17.21",
    "minio": "^7.1.3",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.2",
    "mongoose-autopopulate": "^1.1.0",
    "nest-winston": "^1.9.4",
    "nestjs-minio-client": "^2.2.0",
    "nestjs-otel": "^5.1.5",
    "resolve": "^1.22.8",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0",
    "winston-loki": "^6.0.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/resolve": "^1.20.6",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-proto": "^1.165.0",
    "typescript": "^5.3.2"
  }
}
