<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatório</title>

    <link
      href="https://unpkg.com/tailwindcss/dist/tailwind.min.css"
      rel="stylesheet"
    />

    <style>
      table {
        width: 100%;
      }
      th {
        text-align: left;
      }
    </style>
  </head>
  <body class="bg-purple-100">
    <div class="m-8">
      <h1 class="text-3xl mb-8">Listagem de passageiros</h1>
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Número do voo</th>
            <th>Horário</th>
          </tr>
        </thead>
        <tbody>
          <% if (passengers.length > 0) { %> <% passengers.forEach(passenger =>
          { %>
          <tr>
            <td><%= passenger.name + id%></td>
            <td><%= passenger.flightNumber + id %></td>
            <td><%= passenger.time %></td>
          </tr>
          <% }); %> <% } %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="2"><%=passengers.length%> passageiros</td>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
</html>
